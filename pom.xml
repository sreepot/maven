<build>
     <plugins>
	       <plugin>
   <groupId>org.codehaus.mojo</groupId>
	 <artifactId>exec-maven-plugin</artifactId>
	 <version>3.0.0</version>
	 <configuration>
	     <executable>git</executable>
		   <arguments>
		       <argument>--version</argument>
		   </arguments>
	  </configuration>
	       </plugin>
		 
		     <plugin>
		         <groupId>org.apache.maven.plugins</groupId>
	           <artifactId>maven=antrun-plugin</artifactId>
	           <version>1.1</version>
	           <executions> 
			           <execution>
	                   <id>id.clean</id>
					           <phase>compile</phase>
					           <goals>
					           <goal>run</goal>
					           </goals>
					           <configuration>
					           <tasks>
					               <echo>============</echo>
						             <echo>compile phase</echo>
						             <echo>============</echo>
					           </tasks>
					           </configuration>
		         </execution>
			 </executions>
		 </plugin>
	  </plugins>
 </build>
